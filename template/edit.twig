{% extends "base.twig" %}
{% block body %}
    <div class="container">
        <div class="mb-4 mt-3"><h4>Edit article</h4></div>
        <form method="post" action="/edit-art" >
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" value="{{ title }}" placeholder="{{ title }}">
            </div>
            <div class="form-group">
                <label for="content">Text</label>
                <input type="text" name="content" class="form-control" id="content" value="{{ content }}" placeholder="{{ content }}">
            </div>
            <input type="hidden" name="url" value="{{ url}}">
            <input type="hidden" name="id" value="{{ id}}">
            <button type="submit" class="btn btn-primary">add</button>
        </form>

    </div>

{% endblock %}